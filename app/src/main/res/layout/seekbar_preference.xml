<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/widget_frame"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:id="@android:id/title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="@dimen/setting_name_textSize"
		android:paddingLeft="@dimen/setting_name_padding_sides"
		android:paddingRight="@dimen/setting_name_padding_sides"
		android:paddingTop="@dimen/setting_name_padding_top"
		android:paddingBottom="@dimen/setting_name_padding_bottom" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingBottom="@dimen/setting_inner_layout_padding_bottom">

		<SeekBar
			android:id="@+id/seekbar"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="75"
			android:paddingTop="5dp"
			android:paddingEnd="@dimen/setting_seekbar_padding_right"
			android:paddingStart="@dimen/setting_seekbar_padding_left" />

		<TextView
			android:id="@+id/seekbar_label"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="25"
			android:paddingLeft="@dimen/setting_duration_label_padding_left"
			android:textSize="@dimen/setting_duration_label_text_size" />

	</LinearLayout>

</LinearLayout>